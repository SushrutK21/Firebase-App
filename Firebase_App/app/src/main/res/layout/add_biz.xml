
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
        android:id="@+id/button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button01"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:text="&lt;Back" />
    <TextView
        android:id="@id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/addbiz"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:text=" Add Business"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:layout_weight="0.11"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button01"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/addbiz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
    android:id="@+id/CompanyName"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@drawable/textinputborder"
    android:hint="Company Name"
    android:paddingLeft="10dp"
    android:inputType="textVisiblePassword"
        android:layout_below="@+id/addbiz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </EditText>



    <EditText
        android:id="@+id/ProviderName"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/textinputborder"
        android:hint="Indiviual Service Provider Name"
        android:paddingLeft="10dp"
        android:inputType="textVisiblePassword"
        android:layout_below="@+id/CompanyName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </EditText>



    <EditText
        android:id="@+id/ServiceLocation"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/textinputborder"
        android:hint="Comapny Location / City"
        android:paddingLeft="10dp"
        android:inputType="textVisiblePassword"
        android:layout_below="@+id/ProviderName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save and Claim Business"
        android:id="@+id/claimbiz"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/claimbiz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:background="@android:color/holo_green_light" />

</RelativeLayout>